
<style>
    .card {
        width: 25vw;
    }
</style>

<div class="container is-fluid">

    <div class="columns">

        <div class="column is-1">
            <aside class="menu">
                <p class="menu-label">
                    Categories
                </p>
                <ul class="menu-list">
                    {{#each indexes}}
                        <li><a href="/vocabulary/{{path}}">{{index}}</a></li>
                    {{/each}}
                </ul>
            </aside>
        </div>

        <div class="column">
            <div class="notification">

                <h1 class="title">{{category}}</h1>

                <div class="task-container columns is-multiline">

                    {{#each vocabulary}}
                        <div class="column">
                            <div class="card">
                                <div class="card-image">
                                    <figure class="image">
                                        <img src="{{imageURL}}" alt="Placeholder image">
                                    </figure>
                                </div>
                                <div class="card-content">
                                    <div class="media">
                                        <div class="media-content">
                                            <p class="title is-4">{{name}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>